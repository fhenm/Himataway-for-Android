<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                tools:background="@android:color/background_dark"
                android:background="?attr/holo_background"
                android:padding="6dp">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="64dp"
        android:layout_height="64dp"
        tools:ignore="ContentDescription"/>

    <Button
        android:id="@+id/save_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="@string/button_save"/>

    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="64dp"
        android:layout_below="@id/icon"
        tools:ignore="TextFields"/>

    <TextView
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_alignBaseline="@id/name"
        android:text="@string/label_name"/>

    <EditText
        android:id="@+id/location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="64dp"
        android:layout_below="@id/name"
        tools:ignore="TextFields"/>

    <TextView
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_alignBaseline="@id/location"
        android:text="@string/label_location"/>

    <EditText
        android:id="@+id/url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="64dp"
        android:layout_below="@id/location"
        tools:ignore="TextFields"/>

    <TextView
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_alignBaseline="@id/url"
        android:text="@string/label_web_site"/>

    <EditText
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="64dp"
        android:layout_below="@id/url"
        tools:ignore="TextFields"/>

    <TextView
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_alignBaseline="@id/description"
        android:text="@string/label_bio"/>

</RelativeLayout>
