<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <CheckBoxPreference
        android:key="user_icon_rounded_on"
        android:title="@string/pref_title_user_icon_rounded_on"
        android:summary="@string/pref_description_user_icon_rounded_on"
        android:defaultValue="true"/>

    <ListPreference
        android:key="user_icon_size"
        android:title="@string/pref_title_user_icon_size"
        android:defaultValue="bigger"
        android:entries="@array/pref_user_icon_size_titles"
        android:entryValues="@array/pref_user_icon_size_values"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"/>

    <CheckBoxPreference
        android:key="display_thumbnail_on"
        android:title="@string/pref_title_display_thumbnail_on"
        android:summary="@string/pref_description_display_thumbnail_on"
        android:defaultValue="true"/>

    <ListPreference
        android:key="page_count"
        android:title="@string/pref_title_page_count"
        android:defaultValue="100"
        android:entries="@array/pref_page_count_titles"
        android:entryValues="@array/pref_page_count_values"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"/>
</PreferenceScreen>
